{
  "name": "ziboupdater",
  "productName": "ziboupdater",
  "version": "1.0.1",
  "description": "My Electron application description",
  "main": "src/index.js",
  "build": {
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "uninstallDisplayName": "Uninstall Zibo Updater"
    },
    "win":{
      "target": "nsis",
      "icon": "build/icon.ico",
      "publisherName": "Malte Hallström"
    },
    "appId": "com.ziboupdater.zu",
    "productName": "Zibo Updater (ZU)",
    "buildVersion": "1.0.1",
    "copyright": "Malte Hallström 2019"
  },
  "repository": "https://github.com/SkySails/ziboUpdater",
  "scripts": {
    "start": "electron-forge start",
    "build": "build --win",
    "ship": "build --win -p always",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint src --color"
  },
  "keywords": [],
  "author": "Malte",
  "license": "MIT",
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "npm",
        "icon": "src/assets/icons/png/500x500"
      },
      "electronWinstallerConfig": {
        "name": "ZiboUpdater",
        "setupIcon": "src/assets/icons/png/500x500.ico",
        "icon": "src/assets/icons/png/500x500.ico",
        "loadingGif": "src/images/cropped.gif"
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "",
        "name": ""
      },
      "windowsStoreConfig": {
        "packageName": "",
        "name": "ziboupdater"
      }
    }
  },
  "dependencies": {
    "decompress-zip": "^0.2.2",
    "electron-compile": "^6.4.4",
    "electron-download-manager": "^2.3.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^4.0.6",
    "node-fetch": "^2.3.0"
  },
  "devDependencies": {
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "electron-builder": "^20.39.0",
    "electron-forge": "^5.2.4",
    "electron-prebuilt-compile": "4.0.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.12.4"
  }
}
